mixin iconCategory(category, name, mode)
    if icons.svg[category] && mode === 'svg'
        each icon in icons.svg[category]
            div
                +icon([category, icon.name].join('/'))
                code= icon.name

    - var iconFontClassPrefix = config.icons && config.icons.iconFontClassPrefix || 'if';

    if mode === 'icon-font'
        each icon in icons.iconFont
            div
                i(class=`${iconFontClassPrefix} ${iconFontClassPrefix}-${icon}`)
                code= icon

mixin iconsOverview(mode, name)
    +iconCategory('', name, mode)
    if mode === 'svg'
        each category, categoryKey in icons.svg
            if categoryKey
                +iconCategory(categoryKey, 'Icons/' + categoryKey, mode)

