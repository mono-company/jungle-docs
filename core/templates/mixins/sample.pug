mixin sample(component)
    .br-sample(id='component-' + component.name)
        .br-sample-header.br-sample-clearfix
            if component.docs
                h3.br-sample-heading(class=styleguideSampleHeadingClass)= component.docs.attributes.title || component.name
            else
                h3.br-sample-heading(class=styleguideSampleHeadingClass)= component.name
            a.br-sample-header-link(href="#component-"+component.name) #
        if component.docs
            .br-sample-documentation(class=styleguideRichContentClass)!= component.docs.body
        .br-sample-content!= render(component.filename, 'html')
        .br-sample-footer
            if config.styleguide.snippetLanguage === 'html'
                button.br-sample-show-code-btn(class=styleguideButtonClass) Show HTML code
            if config.styleguide.snippetLanguage === 'pug'
                button.br-sample-show-code-btn(class=styleguideButtonClass) Show Pug code
            .br-sample-code
                button.br-sample-copy-code-btn(class=styleguideButtonClass) Copy to clipboard
                if config.styleguide.snippetLanguage === 'html'
                    pre.br-sample-markup= render(component.filename, 'html')
                if config.styleguide.snippetLanguage === 'pug'
                    pre.br-sample-markup= render(component.filename, 'pug')
